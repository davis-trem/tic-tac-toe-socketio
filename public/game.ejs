<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/styles.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.js"></script>
    </head>
    <body>
        <% include ./partials/nav %>

        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <h2 id="player"></h2>
                    <h2 id="status"></h2>
                </div>
            </div>
            <div class="row">
                <div class="col center">
                    <div id="cover">WAITING FOR OPPONENT</div>
                    <table id="board">  
                        <tr>
                            <td id="square0" onclick="moveMade(this)">&nbsp;</td>
                            <td id="square1" onclick="moveMade(this)">&nbsp;</td>
                            <td id="square2" onclick="moveMade(this)">&nbsp;</td>
                        </tr>
                        <tr>
                            <td id="square3" onclick="moveMade(this)">&nbsp;</td>
                            <td id="square4" onclick="moveMade(this)">&nbsp;</td>
                            <td id="square5" onclick="moveMade(this)">&nbsp;</td>
                        </tr>
                        <tr>
                            <td id="square6" onclick="moveMade(this)">&nbsp;</td>
                            <td id="square7" onclick="moveMade(this)">&nbsp;</td>
                            <td id="square8" onclick="moveMade(this)">&nbsp;</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-3  col-sm-12">
                    <textarea id="chat" readonly></textarea>
                    <div class="input-group mb-3">
                        <input type="text" id="message"  class="form-control" placeholder="Enter message" />
                        <div class="input-group-append">
                            <input type="button" class="btn btn-success" value="Send" onclick="sendChat()" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script src="/js/gameClient.js"></script>
        <script src="/js/invitation.js"></script>
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    </body>
</html>